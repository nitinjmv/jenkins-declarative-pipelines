def gv
def CODE_CHANGES = getGitChanges()

pipeline {
    agent any

    stages {
        stage('init'){
            gv = load script.groovy"
        }
        stage('build') {
            when {
                expression {
                    BRANCH_NAME = 'dev' && CODE_CHANGES == true
                }
            }
            steps {
                echo 'Build'
            }
        }
        stage('test') {
            when {
                expression {
                    BRANCH_NAME = 'dev'
                }
            }
            steps {
                echo 'test'
            }
        }
        stage('deploy') {
            steps {
                echo 'Deploy'
            }
        }
    }
    post {
        always {
            echo 'always'
        }
        
        success {
            echo 'success'
        }
        
        failure {
            echo 'failure'
        }
        
    }
}
